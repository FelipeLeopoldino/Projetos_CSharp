@model academia.Application.Models.Account.UserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <img src="~/img/login.jpg" style="width:100%" />
        </div>
        <div class="col-sm-6">
            <form class="row g-3" asp-controller="Account" asp-action="Login" method="POST">

                <div class="col-12">
                    <label for="usuario" class="form-label">Usuário</label>
                    <input type="text" class="form-control" placeholder="Digite um usuário" asp-for="UserName">
                </div>

                <div class="col-md-12">
                    <label for="senha" class="form-label">Senha</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Digite sua senha">
                </div>

                <div class="col-12">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </div>
</div>

