@model academia.Application.Models.Account.ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <img src="~/img/login.jpg" style="width:100%" />
        </div>
        <div class="col-sm-6">
            <form class="row g-3" asp-controller="Account" asp-action="ResetPassword" method="POST">

                <input asp-for="Token" type="hidden"/>
                <input asp-for="Email" type="hidden" />

                <div class="col-md-12">
                    <label for="senha" class="form-label">Senha</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Digite sua nova senha">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label for="confirmeSenha" class="form-label">Confirme senha</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirme a sua nova senha">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Alterar nova senha</button>
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
            </form>

        </div>
    </div>
</div>

